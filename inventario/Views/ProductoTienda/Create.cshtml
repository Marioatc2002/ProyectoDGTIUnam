@model inventario.Models.ProductoTienda

@{
    ViewData["Title"] = "Nuevo Postre";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-3">

                <div class="card-header bg-dark text-white text-center py-4">
                    <h3 class="mb-0 text-uppercase fw-light" style="letter-spacing: 2px;">
                        <i class="bi bi-plus-circle me-2"></i>Registrar Nuevo Postre
                    </h3>
                </div>

                <div class="card-body p-5">
                    <form asp-controller="ProductoTienda" asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold small text-muted">Nombre del Postre</label>
                                <input asp-for="Nombre" class="form-control" placeholder="Ej. Tarta de Limón" />
                                <span asp-validation-for="Nombre" class="text-danger small"></span>
                            </div>

                            <div class="col-md-4 mb-3">
                                <label asp-for="Cantidad" class="form-label fw-bold small text-muted">Stock</label>
                                <input asp-for="Cantidad" type="number" class="form-control" placeholder="0" />
                                <span asp-validation-for="Cantidad" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Descripcion" class="form-label fw-bold small text-muted">Descripción Corta</label>
                            <textarea asp-for="Descripcion" class="form-control" rows="2" placeholder="Detalles o ingredientes..."></textarea>
                            <span asp-validation-for="Descripcion" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaCreacion" class="form-label fw-bold small text-muted">Elaborado el:</label>
                                <input asp-for="FechaCreacion" type="date" class="form-control" />
                                <span asp-validation-for="FechaCreacion" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="FechaCaducidad" class="form-label fw-bold small text-danger">Vence el:</label>
                                <input asp-for="FechaCaducidad" type="date" class="form-control" />
                                <span asp-validation-for="FechaCaducidad" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold small text-muted">Imagen del Producto</label>
                            <div class="input-group">
                                <input type="file" name="fotoArchivo" id="inputFoto" class="form-control" accept="image/*" required />
                                <label class="input-group-text bg-light" for="inputFoto">Subir</label>
                            </div>
                            <div class="mt-3 text-center">
                                <img id="imgPreview" src="#" alt="Vista previa" class="img-thumbnail d-none shadow-sm" style="max-height: 200px;" />
                            </div>
                        </div>

                        <div class="d-flex justify-content-between align-items-center pt-3 border-top">
                            <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">
                                <i class="bi bi-arrow-left"></i> Cancelar y volver
                            </a>
                            <button type="submit" class="btn btn-dark px-5 py-2 fw-bold shadow">
                                GUARDAR EN INVENTARIO
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Lógica para previsualizar la imagen en tiempo real
        const inputFoto = document.getElementById('inputFoto');
        const imgPreview = document.getElementById('imgPreview');

        inputFoto.onchange = evt => {
            const [file] = inputFoto.files;
            if (file) {
                imgPreview.src = URL.createObjectURL(file);
                imgPreview.classList.remove('d-none');
            }
        }
    </script>
}