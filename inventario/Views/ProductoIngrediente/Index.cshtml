@model IEnumerable<inventario.Models.ProductoIngrediente>

@{
    ViewData["Title"] = "Inventario de Ingredientes";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-uppercase fw-bold text-dark border-start border-4 border-success ps-3">
            Almacén de Insumos
        </h2>
        <a asp-action="Create" class="btn btn-success shadow-sm">
            <i class="bi bi-plus-lg"></i> Nuevo Ingrediente
        </a>
    </div>

    <div class="card shadow-sm border-0 rounded-3">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light text-muted">
                    <tr>
                        <th class="ps-4">Código</th>
                        <th>Insumo</th>
                        <th>Medida</th>
                        <th>Stock Actual</th>
                        <th>Costo Unit.</th>
                        <th>Vencimiento</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="ps-4">
                                <span class="badge bg-light text-dark border fw-bold text-uppercase">
                                    @(item.Codigo ?? "S/C")
                                </span>
                            </td>

                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(string.IsNullOrEmpty(item.UrlImagen) ? "https://via.placeholder.com/50" : item.UrlImagen)"
                                         class="rounded-circle shadow-sm me-3"
                                         style="width: 45px; height: 45px; object-fit: cover;"
                                         alt="@item.Nombre"
                                         loading="lazy">
                                    <div>
                                        <div class="fw-bold text-dark">@item.Nombre</div>
                                        <small class="text-muted d-block" style="font-size: 0.75rem;">
                                            @item.Descripcion
                                        </small>
                                    </div>
                                </div>
                            </td>

                            <td>
                                <small class="text-muted">@item.CantidadProducto @item.UnidadMedida</small>
                            </td>

                            <td>
                                <div class="fw-bold @(item.Cantidad < 5 ? "text-danger" : "text-dark")">
                                    @item.Cantidad <small class="fw-normal">uds</small>
                                    @if (item.Cantidad < 5)
                                    {
                                        <i class="bi bi-exclamation-circle-fill ms-1"></i>
                                    }
                                </div>
                            </td>

                            <td class="text-dark fw-bold">
                                $@item.PrecioUnidad.ToString("N2")
                            </td>

                            <td>
                                @if (item.FechaVencimiento.HasValue)
                                {
                                    var fechaVenc = item.FechaVencimiento.Value.ToDateTime(TimeOnly.MinValue);
                                    var diasRestantes = (fechaVenc - DateTime.Today).Days;

                                    <div class="d-flex flex-column">
                                        <span class="small @(diasRestantes < 7 ? "text-danger fw-bold" : "text-muted")">
                                            @item.FechaVencimiento.Value.ToString("dd/MM/yyyy")
                                        </span>
                                        @if (diasRestantes >= 0 && diasRestantes < 7)
                                        {
                                            <span class="badge bg-danger p-1" style="font-size: 0.6rem;">¡VENCE PRONTO!</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted small">Sin fecha</span>
                                }
                            </td>

                            <td class="text-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0"><i class="bi bi-pencil"></i></a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary border-0"><i class="bi bi-eye"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger border-0"><i class="bi bi-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>