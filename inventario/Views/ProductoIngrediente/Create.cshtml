@model inventario.Models.ProductoIngrediente

@{
    ViewData["Title"] = "Nuevo Ingrediente";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-success text-white py-3">
                    <h4 class="mb-0 text-uppercase text-center fw-light" style="letter-spacing: 2px;">
                        <i class="bi bi-egg-fried me-2"></i>Registro de Materia Prima / Ingredientes
                    </h4>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Create" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

                        <div class="row g-4">
                            <div class="col-md-7">
                                <h5 class="text-success border-bottom pb-2 mb-3">Información General</h5>

                                <div class="mb-3">
                                    <label asp-for="Codigo" class="form-label fw-bold small">Código de Insumo</label>
                                    <input asp-for="Codigo" class="form-control" placeholder="Ej. IN-LIM-001" />
                                    <span asp-validation-for="Codigo" class="text-danger small"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Nombre" class="form-label fw-bold small">Nombre del Ingrediente</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Ej. Leche Condensada" />
                                    <span asp-validation-for="Nombre" class="text-danger small"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Descripcion" class="form-label fw-bold small">Descripción / Marca</label>
                                    <textarea asp-for="Descripcion" class="form-control" rows="2" placeholder="Detalles del proveedor o uso..."></textarea>
                                    <span asp-validation-for="Descripcion" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-5 bg-light p-4 rounded-3">
                                <h5 class="text-dark border-bottom border-secondary pb-2 mb-3">Inventario y Costos</h5>
                                <div class="row g-2">
                                    <div class="col-6 mb-3">
                                        <label asp-for="Cantidad" class="form-label fw-bold small">Stock (Unidades)</label>
                                        <input asp-for="Cantidad" type="number" class="form-control" />
                                        <span asp-validation-for="Cantidad" class="text-danger small"></span>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label asp-for="UnidadMedida" class="form-label fw-bold small">U. Medida</label>
                                        <select asp-for="UnidadMedida" class="form-select">
                                            <option value="Gramos">Gramos (g)</option>
                                            <option value="Kilogramos">Kilos (kg)</option>
                                            <option value="Mililitros">Mililitros (ml)</option>
                                            <option value="Litros">Litros (L)</option>
                                            <option value="Piezas">Piezas (pz)</option>
                                        </select>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label asp-for="PrecioUnidad" class="form-label fw-bold small">Precio p/u</label>
                                        <div class="input-group">
                                            <span class="input-group-text">$</span>
                                            <input asp-for="PrecioUnidad" type="number" step="0.01" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label asp-for="CantidadProducto" class="form-label fw-bold small">Contenido Neto</label>
                                        <input asp-for="CantidadProducto" type="number" step="0.1" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mt-4">
                                <h5 class="text-secondary border-bottom pb-2 mb-3">Control de Calidad</h5>
                                <div class="row">
                                    <div class="col-6 mb-3">
                                        <label asp-for="FechaEntrada" class="form-label fw-bold small">Fecha Entrada</label>
                                        <input asp-for="FechaEntrada" type="date" class="form-control" />
                                    </div>
                                    <div class="col-6 mb-3">
                                        <label asp-for="FechaVencimiento" class="form-label fw-bold small text-danger">Vencimiento</label>
                                        <input asp-for="FechaVencimiento" type="date" class="form-control border-danger" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 mt-4">
                                <h5 class="text-secondary border-bottom pb-2 mb-3">Imagen del Insumo</h5>
                                <input type="file" name="fotoArchivo" id="inputFoto" class="form-control" accept="image/*" />
                                <div class="mt-2 text-center">
                                    <img id="preview" src="#" alt="Previsualización" class="img-thumbnail d-none" style="max-height: 120px;" />
                                </div>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5 pt-4 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">Volver al Almacén</a>
                            <button type="submit" class="btn btn-success px-5 fw-bold shadow">REGISTRAR INGREDIENTE</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        inputFoto.onchange = evt => {
            const [file] = inputFoto.files
            if (file) {
                preview.src = URL.createObjectURL(file)
                preview.classList.remove('d-none');
            }
        }
    </script>
}