@model inventario.ViewModels.UsuarioVM;

<html>
    <head>
        <title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        </title>
    </head>
    <body>

        <div class="row mt-5 justify-content-center">
            <div class="col-sm-4">
                <div class="card">
                    <div class="card-header">
                        Registrarse
                    </div>
                    <div class="card-body">
                    <form asp-controller="Acceso" asp-action="Registrarse" method="post">
                            <input type="text" name="Nombre" value="" placeholder="" required asp-for="Nombre" />
                        <input type="text" name="ApellidoMaterno" value="" placeholder="" required asp-for="ApellidoMaterno" />
                        <input type="text" name="ApellidoPaterno" value="" placeholder="" required asp-for="ApellidoPaterno" />
                        <input type="email" name="Email" value="" placeholder="email@example.." required asp-for="Email" />
                        <input type="password" name="Pass" value="" required asp-for="Pass" />
                        <input type="password" name="PassConfirm" value="" required asp-for="PassConfirm" />
                            <select asp-for="Rol" asp-items="Html.GetEnumSelectList<Rol>()"
                                class="form-select"></select>

                            <div class="mb-3">
                                <label asp-for="Status" class="form-label"></label>
                
                                <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select"></select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="FechaNacimiento" class="form-label"></label>
                                <input asp-for="FechaNacimiento" type="date" class="form-control" />
                            </div>
                            <div class="d-grid gap-2 mb-3">
                                <button type="submit" class="btn btn-primary">Registrarse</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
