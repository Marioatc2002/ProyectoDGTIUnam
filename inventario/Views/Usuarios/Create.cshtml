@model inventario.Models.Usuario

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Usuario</h4>
<hr />
<div class="container">
    <div class="row">
                <form asp-action="Create" class="col flex-column" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group p-2 flex-fill">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
 
                    <div class="form-group p-2 flex-fill"> 
                        <label asp-for="ApellidoPaterno" class="control-label"></label>
                        <input asp-for="ApellidoPaterno" class="form-control" />
                        <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2 flex-fill">
                        <label asp-for="ApellidoMaterno" class="control-label"></label>
                        <input asp-for="ApellidoMaterno" class="form-control" />
                        <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2 flex-fill">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2 flex-fill">
                        <label asp-for="Pass" class="control-label"></label>
                        <input asp-for="Pass" type="password" class="form-control" />
                        <span asp-validation-for="Pass" class="text-danger"></span>
                    </div>               
                    <div class="p-2 flex-fill">
                        <label asp-for="Status" class="form-label"></label>               
                        <select asp-for="Status" asp-items="ViewBag.StatusList" class="form-select"></select>
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>

                    <div class="p-2 flex-fill">
                        <label class="form-label">Género</label><br />

                        @if (ViewBag.Generos != null)
                        {
                            @foreach (var genero in ViewBag.Generos)
                            {
                                <div class="form-check form-check-inline">
                                    <input asp-for="GeneroId" class="form-check-input" type="radio" name="GeneroId" value="@genero.id" />
                                    <label asp-for="GeneroId" class="form-check-label">@genero.tipo</label>
                                </div>
                            }
                        }
                    </div>

                    <div class="form-group p-2 flex-fill">
                        <label asp-for="FechaNacimiento" class="control-label"></label>
                        <input asp-for="FechaNacimiento" class="form-control" type="date" />
                        <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                    </div>
                    <div class="form-group p-2 flex-fill">
                        <label asp-for="RolId" class="control-label">Rol del Usuario</label>
                        <select asp-for="RolId" class="form-control" asp-items="ViewBag.RolId">
                            <option value="">-- Seleccione un Rol --</option>
                        </select>
                        <span asp-validation-for="RolId" class="text-danger"></span>
                    </div>

                    <div class="form-group p-2 flex-fill">
                        <label class="control-label">Seleccionar Foto de Perfil</label>
                        <input type="file"
                               name="fotoUsuario"
                               class="form-control"
                               accept=".jpg,.jpeg,.png,.gif" />

                        @* Mantenemos el span de validación apuntando a la propiedad del modelo *@
                        <span asp-validation-for="FotoRuta" class="text-danger"></span>
                        <small class="text-muted">Formatos permitidos: JPG, PNG, GIF.</small>
                    </div>

                    <div class="form-group p-2 flex-fill">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
   
        <div class="col">
            <img class="img-fluid" src="~/Imagenes/Web/elemento.jpg" alt="Alternate Text" />
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
