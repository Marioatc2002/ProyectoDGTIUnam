@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // 1. Obtenemos el mensaje del servidor
            var mensaje = '@TempData["MensajeExito"]';

            // 2. Detectamos cómo llegó el usuario a esta página
            // La API 'performance' nos dice si fue por link, recarga o botón atrás
            var perfEntries = performance.getEntriesByType("navigation");

            var esBotonAtras = false;
            if (perfEntries.length > 0) {
                // Si el tipo es 'back_forward', significa que usó las flechas del navegador
                esBotonAtras = perfEntries[0].type === 'back_forward';
            }

            // 3. Solo mostramos la alerta si NO es botón atrás y SI hay mensaje
            if (mensaje && mensaje.length > 0 && !esBotonAtras) {
                Swal.fire({
                    title: "¡Excelente!",
                    text: mensaje,
                    icon: "success",
                    confirmButtonText: "Ok",
                    timer: 3000 // Opcional: se cierra sola en 3 segundos
                });
            }
        });
    </script>
}