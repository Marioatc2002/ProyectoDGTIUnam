@model inventario.Models.ViewModels.UsuarioIndexViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<div class="row">

    <div class="col-lg-3">
        <div class="card">
            <div class="card-header">Filtro</div>
            <div class="card-body">
                <!-- Aplica filtro -->
                <form method="get" class="vstack gap-2">
                    <input type="hidden" name="mode" value="filter" />

                    <div>
                        <label asp-for="Filtro.Id" class="form-label"></label>
                        <input asp-for="Filtro.Id" class="form-control" />
                    </div>

                    <div>
                        <label asp-for="Filtro.Nombre" class="form-label"></label>
                        <input asp-for="Filtro.Nombre" class="form-control" placeholder="Contiene…" />
                    </div>

                    <div class="row g-2">
                        <div class="col">
                            <label asp-for="Filtro.FechaAltaDesde" class="form-label"></label>
                            <input asp-for="Filtro.FechaAltaDesde" type="date" class="form-control" />
                        </div>
                        <div class="col">
                            <label asp-for="Filtro.FechaAltaHasta" class="form-label"></label>
                            <input asp-for="Filtro.FechaAltaHasta" type="date" class="form-control" />
                        </div>
                    </div>

                    <div>
                        <label class="form-label">Status</label>
                        <select asp-for="Filtro.StatusSeleccionados"
                                asp-items="Model.Filtro.StatusOpciones"
                                class="form-select" multiple size="3"></select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Aplicar Filtro</button>
                    </div>
                </form>

                <!-- Mostrar todos -->
                <form method="get" class="mt-2 d-grid">
                    <input type="hidden" name="mode" value="all" />
                    <button class="btn btn-outline-secondary">Mostrar todos</button>
                </form>

                <a class="btn btn-success mt-3 w-100" asp-action="Create">Crear</a>
            </div>
        </div>
    </div>

    <div class="col-lg-9">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <span>Resultados @(Model.Resultados?.TotalCount ?? 0)</span>
            </div>
            <div class="card-body p-0">
                <!-- Form de paginación (conserva filtros como hidden) -->
                <form method="get" class="m-0 p-0">
                    <input type="hidden" name="mode" value="filter" />
                    <!-- Hiddens para mantener filtros al cambiar de página -->
                    <input type="hidden" name="Filtro.Id" value="@(Model.Filtro.Id)" />
                    <input type="hidden" name="Filtro.NombreLike" value="@(Model.Filtro.Nombre)" />
                    <input type="hidden" name="Filtro.FechaAltaDesde" value="@(Model.Filtro.FechaAltaDesde?.ToString("yyyy-MM-dd"))" />
                    <input type="hidden" name="Filtro.FechaAltaHasta" value="@(Model.Filtro.FechaAltaHasta?.ToString("yyyy-MM-dd"))" />
                    @foreach (var s in Model.Filtro.StatusSeleccionados)
                    {
                        <input type="hidden" name="Filtro.StatusSeleccionados" value="@s" />
                    }

                    <table class="table table-striped table-hover mb-0">
                        <thead class="">
                            <tr class="">
                                <th clas="">ID</th>
                                <th clas="">Nombre</th>
                                <th clas="">Correo</th>
                                <th clas="">Fecha de Alta</th>
                                <th clas="">Status</th>
                                <th clas=""></th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Resultados is not null)
                            {
                                foreach (var c in Model.Resultados)
                                {
                                    <tr>
                                        <td>@c.Id</td>
                                        <td>@c.Nombre</td>
                                        <td>@c.Email</td>
                                        <td>@c.FechaAlta.ToString("yyyy-MM-dd")</td>
                                        <td>@c.Status</td>
                                        <td class="text-nowrap">
                                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@c.Id">Consultar</a>
                                            <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@c.Id">Editar</a>
                                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@c.Id">Borrar</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                    <div class="p-3">
                        @if (Model.Resultados is not null)
                        {
                            @await Html.PartialAsync("_Pagination", Model.Resultados)
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>


</div>
<!-- Filtro -->





